#include <reg51.h>
void delay(void);
void ISR_ex0(void);
sbit led=P1^1;

void main()
{
       
        P1 = 0x00;                  //setting as output port       
        P3 = 0x04;                  //setting P3.2 as input pin for interrupt0
        IE=0x81;            
        IT0=1;
while(1)
{
        led=1;
}
}
 
void ISR_ex0(void)     //ISR(interrupt service routine) for external interrupt 0
{
       led=~led;
       delay();
}

void delay()
{
  int i,j;
  for(i=0;i<500;i++)
  {
    for(j=0;j<1000;j++)
    {
    }
  }
}
