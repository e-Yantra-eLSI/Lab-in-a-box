#include <reg51.h>
sbit button = P0 ^ 0;
sbit led = P1 ^ 1;
void main()
{
    P1 = 0x00;  //assigning as output port
    P0 = 0xFF;  //assigning as input port
    while (1)
    {
        if (button == 1)    //if button is pressed, led is on
            led = 1;
        else if (button == 0) //if button is not pressed, led is off
            led = 0;
    }
}
